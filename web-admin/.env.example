# ==============================================
# SMART LOCK WEB ADMIN - ENVIRONMENT VARIABLES
# ==============================================

# Application Settings
REACT_APP_NAME=Smart Lock Admin Dashboard
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Sistema de gerenciamento de armários inteligentes

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=10000

# WebSocket Configuration
REACT_APP_WS_URL=ws://localhost:3001
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=5

# Authentication
REACT_APP_JWT_TOKEN_KEY=smart_lock_admin_token
REACT_APP_SESSION_TIMEOUT=28800000
REACT_APP_REFRESH_TOKEN_KEY=smart_lock_refresh_token

# Features Toggle
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_EXPORT_REPORTS=true
REACT_APP_ENABLE_REAL_TIME_MONITORING=true

# Pagination & Display
REACT_APP_DEFAULT_PAGE_SIZE=25
REACT_APP_MAX_PAGE_SIZE=100
REACT_APP_DEFAULT_DATE_FORMAT=dd/MM/yyyy
REACT_APP_DEFAULT_TIME_FORMAT=HH:mm:ss

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.csv,.xlsx
REACT_APP_UPLOAD_ENDPOINT=/api/v1/uploads

# Maps & Location (se necessário)
REACT_APP_MAPS_API_KEY=your_maps_api_key_here
REACT_APP_DEFAULT_LAT=-25.4284
REACT_APP_DEFAULT_LNG=-49.2733

# Monitoring & Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_LOG_LEVEL=info

# Security
REACT_APP_CSP_NONCE=random_nonce_here
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=true

# Development Settings
REACT_APP_MOCK_API=false
REACT_APP_DEBUG_MODE=false
REACT_APP_SHOW_DEV_TOOLS=false

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false

# PWA Configuration
REACT_APP_ENABLE_PWA=false
REACT_APP_SW_UPDATE_POPUP=true

# Branding
REACT_APP_ORGANIZATION_NAME=Universidade Federal
REACT_APP_ORGANIZATION_LOGO_URL=/assets/images/logo.png
REACT_APP_THEME_PRIMARY_COLOR=#1f2937
REACT_APP_THEME_SECONDARY_COLOR=#3b82f6

# Email Templates
REACT_APP_SUPPORT_EMAIL=suporte@universidade.edu.br
REACT_APP_ADMIN_EMAIL=admin@universidade.edu.br

# Cache Settings
REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_CACHE=true

# Error Handling
REACT_APP_ERROR_BOUNDARY_FALLBACK=true
REACT_APP_CRASH_REPORT_ENDPOINT=/api/v1/crash-reports

# Performance
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_PERFORMANCE_SAMPLE_RATE=0.1

# Localization
REACT_APP_DEFAULT_LOCALE=pt-BR
REACT_APP_SUPPORTED_LOCALES=pt-BR,en-US

# Hardware Integration
REACT_APP_HARDWARE_STATUS_REFRESH=30000
REACT_APP_ENABLE_HARDWARE_CONTROLS=true