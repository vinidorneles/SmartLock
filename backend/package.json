{
  "name": "smart-lock-backend",
  "version": "1.0.0",
  "description": "Backend API for Smart Lock System - University equipment lending management",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "db:backup": "node scripts/backup.js",
    "logs:clear": "rm -rf logs/*.log",
    "logs:tail": "tail -f logs/smartlock.log",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "build": "echo 'No build step required for Node.js backend'",
    "prestart": "node scripts/check-environment.js",
    "postinstall": "node scripts/post-install.js"
  },
  "keywords": [
    "smart-lock",
    "university",
    "equipment-lending",
    "locker-system",
    "qr-code",
    "iot",
    "hardware-integration",
    "rest-api",
    "websocket",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": {
    "name": "Smart Lock System Team",
    "email": "dev@smartlock.universidade.edu.br",
    "url": "https://github.com/sua-universidade/smart-lock-system"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sua-universidade/smart-lock-system.git"
  },
  "bugs": {
    "url": "https://github.com/sua-universidade/smart-lock-system/issues"
  },
  "homepage": "https://smartlock.universidade.edu.br",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "express-fileupload": "^1.4.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "redis": "^4.6.10",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "qrcode": "^1.5.3",
    "jsqr": "^1.4.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "path": "^0.12.7",
    "fs-extra": "^11.2.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "excel4node": "^1.8.2",
    "node-fetch": "^3.3.2",
    "cheerio": "^1.0.0-rc.12",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-prometheus-middleware": "^1.2.0",
    "prom-client": "^15.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/node": "^20.10.4",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "faker": "^6.6.6",
    "nock": "^13.4.0",
    "mongodb-memory-server": "^9.1.3",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/logs/**",
      "!**/uploads/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  },
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "consistent-return": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ignore": [
      "node_modules/",
      "logs/",
      "uploads/",
      "tests/",
      "coverage/"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  },
  "config": {
    "port": 3001,
    "upload_limit": "10mb",
    "log_level": "info"
  },
  "funding": {
    "type": "institutional",
    "url": "https://universidade.edu.br/projetos/smart-lock"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}